---
import Layout from '../layouts/Layout.astro';
import TierList from '../components/TierList.astro';
---

<Layout title="PUSH | Tierlist">
    <main>
        <div class="container">
            <TierList />
        </div>
    </main>
</Layout>

<style>
    main {
        padding: 2rem;
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h1 {
        color: white;
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
    }
</style> 