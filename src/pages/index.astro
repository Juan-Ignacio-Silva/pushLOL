---
import Layout from '../layouts/Layout.astro';
import Logo from '../assets/logo.svg'
import TextoPush from '../assets/textoPush.svg'
import Barra from '../components/SearchBar.astro'
import GenerarChampions from '../components/generarChampions.astro';
import BotonesPosiciones from '../components/botonesPosiciones.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="PUSH | Home">
	<main>
		<div class="contenedor-principal">
			<div class="logo">
				<img  id="LogoPush" src={ Logo.src }  alt="logo">
				<img id="TextoPush" src={ TextoPush.src } alt="Push">
			</div>
			<div class="search-container">
				<Barra />
				<BotonesPosiciones />
			</div>
			<GenerarChampions />
			<div class="contenedor-button">
				<a href="tierlist" class="tierlist-button">TIERLIST 15.2</a>
			</div>
		</div>
	</main>
</Layout>

<script src="../js/buscador.js"></script>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');

	main {
		width: 100%;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}

	.contenedor-principal {
		width: 700px;
		padding: 2rem;
		border-radius: 1rem;
		height: 100%;
		max-height: 800px;
		display: flex;
		flex-direction: column;
	}

	.logo {
		width: 100%;
		height: 100px;
		display: flex;
		justify-content: center;
		gap: 20px;
		margin-bottom: 20px;
		flex-shrink: 0;
	}

	.search-container {
        display: flex;
        align-items: center;
        gap: 8px;
    }

	#LogoPush {
		width: 4rem;
	}

	#TextoPush {
		width: 14rem;
	}
	
	.contenedor-button{
		width: 100%;
		display: flex;
		justify-content: center;
	}
	
	.tierlist-button {
		width: 30%;
		margin-top: 20px;
        background-color: #f54245;
        color: white;
        border: none;
        padding: 10px 30px;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
		font-family: "Roboto mono", monospace;
		text-align: center;
		text-decoration: none;
    }

    .tierlist-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(245, 66, 69, 0.3);
    }
</style>