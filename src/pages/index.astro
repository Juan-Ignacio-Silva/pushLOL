---
import Layout from '../layouts/Layout.astro';
import GenerarChampions from '../components/generarChampions.astro';
import BotonesPosiciones from '../components/botonesPosiciones.astro';
import Randomizer from '../components/Randomizer.astro';
---

<Layout title="PUSH | Home" showChampsButtons={ true }>
	<div class="contenedor-vertical-1">
		<div class="cuadro-champions-cargados">
			<GenerarChampions />
		</div>
		<div class="texto-champs-random-button">
			<h1>CHAMPIONS RANDOMS</h1>
			<button id="btn-random" class="random-all-btn">RANDOM</button>
		</div>
		<Randomizer />
	</div>
	<div class="contenedor-vertical-2">
		<div class="cuadro-lista-players">

		</div>
	</div>
</Layout>

<style>
	@import url('https://fonts.cdnfonts.com/css/akira-expanded');
	
	.contenedor-vertical-1 {
		width: 60%;
		height: 100%;
		position: relative;
		z-index: 2;
	}

	.contenedor-vertical-2 {
		width: 40%;
		height: 100%;
	}

	.cuadro-champions-cargados {
		width: 100%;
		background-color: rgba(29, 29, 29, 0.95); /* Añadida transparencia */
		height: 70%;
		border-radius: 10px;
		backdrop-filter: blur(5px);
	}

	.texto-champs-random-button {
		width: 100%;
		height: 5%;
		margin-top: 20px;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.texto-champs-random-button h1 {
		color: #D6D6D6;
		font-family: 'Akira Expanded', sans-serif;
	}

	#btn-random {
		width: 150px;
		height: 100%;
		border-radius: 8px;
		border: none;
		background-color: #D6D6D6;
		color: #0A0A0A;
		font-family: 'Akira Expanded', sans-serif;
	}

	#btn-random:hover {
		background-color: #E6FF2A;
	}
	
	.cuadro-lista-players{
		width: 95%;
		float: right;
		background-color: rgba(29, 29, 29, 0.95); /* Añadida transparencia */
		height: 70%;
		border-radius: 10px;
		backdrop-filter: blur(5px);
	}
</style>