---
import Layout from '../layouts/Layout.astro';
import Logo from '../assets/logo.svg'
import TextoPush from '../assets/textoPush.svg'
import Barra from '../components/SearchBar.astro'
import GenerarChampions from '../components/generarChampions.astro';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="PUSH | Home">
	<main>
		<div class="contenedor-principal">
			<div class="logo">
				<img  id="LogoPush" src={ Logo.src }  alt="logo">
				<img id="TextoPush" src={ TextoPush.src } alt="Push">
			</div>
			<Barra />
			<GenerarChampions />
		</div>
	</main>
</Layout>

<script src="../js/buscador.js"></script>

<style>
	main {
		width: 100%;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}

	.contenedor-principal {
		width: 700px;
		padding: 2rem;
		border-radius: 1rem;
		height: 100%;
		max-height: 800px;
		display: flex;
		flex-direction: column;
	}

	.logo {
		width: 100%;
		height: 100px;
		display: flex;
		justify-content: center;
		gap: 20px;
		margin-bottom: 20px;
		flex-shrink: 0;
	}

	#LogoPush {
		width: 4rem;
	}

	#TextoPush {
		width: 14rem;
	}
</style>