---
import Logo from '../assets/logo.svg'
import TextoPush from '../assets/textoPush.svg'
import BotonesPosiciones from '../components/botonesPosiciones.astro';
import SearchBar from '../components/SearchBar.astro';
import Carousel from '../components/Carousel.astro';

interface Props {
	title: string;
	showChampsButtons: boolean;
}

const { title, showChampsButtons } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="sidebar">
			<div class="contenedor-logo">
				<img src={ Logo.src } alt="LogoPush" style=" width: 3rem;">
				<img src={ TextoPush.src } alt="Push" style=" width: 11rem; margin-bottom: 1rem;">
			</div>
			<div class="sidebar-navegation">
				<a class="botones-sidebar" href="/">HOME</a>
				<a class="botones-sidebar" href="parches">PARCHES</a>
				<div class="carousel-wrapper">
                    <Carousel />
                </div>
			</div>
		</div>
		<main>
			<header>
				<SearchBar />
				{ showChampsButtons && <BotonesPosiciones />}
			</header>
			<section class="contenedor-principal">
				<slot />
			</section>
		</main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap');
	@import url('https://fonts.cdnfonts.com/css/akira-expanded');
	* {
		margin: 0px;
		padding: 0px;
		box-sizing: border-box;
	}

	body {
		width: 100%;
		height: 100vh;
		padding: 20px;
		background: #0A0A0A;
		display: flex;
	}

	.sidebar {
		width: 300px;
		height: 100%;
	}

	.contenedor-logo {
		width: 100%;
		height: 10%;
		display: flex;
		gap: 5px;
	}

	.sidebar-navegation {
		width: 100%;
		height: 90%;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 15px;
		background-color: #1D1D1D;
		border-radius: 10px;
		padding: 15px;
	}

	.carousel-wrapper {
        margin-top: auto;
        width: 100%;
        height: 300px; /* Aumentamos la altura /
        padding-top: 20px; / Agregamos espacio superior */
    }

	.botones-sidebar {
		width: 100%;
		height: 50px;
		background-color: #343434;
		border-radius: 5px;
		text-decoration: none;
		color: #EAEBDB;
		display: flex;
		justify-content: center;
		align-items: center;
		font-family: 'Akira Expanded', sans-serif;
		letter-spacing: 1.5px;
	}

	.botones-sidebar:hover {
		background-color: #E6FF2A;
		color: #1D1D1D;
	}

	main {
		width: 100%;
		height: 100%;
		padding-left: 20px;
	}

	header {
		display: flex;
		align-items: center;
		width: 60%;
		height: 10%;
		padding-bottom: 1rem;
		justify-content: space-between;
	}

	.contenedor-principal {
		width: 100%;
		height: 90%;
		display: flex;
	}
</style>
