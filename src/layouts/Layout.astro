---
import Logo from '../assets/logo.svg'
import TextoPush from '../assets/textoPush.svg'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="sidebar">
			<div class="contenedor-logo">
				<img src={ Logo.src } alt="LogoPush" style=" width: 80px;">
				<img src={ TextoPush.src } alt="Push">
			</div>
		</div>
		<slot />
	</body>
</html>

<style is:global>
	
	* {
		margin: 0px;
		padding: 0px;
		box-sizing: border-box;
	}

	body {
		width: 100%;
		height: 100vh;
		padding: 20px;
		background: #0A0A0A;
	}

	.sidebar {
		width: 300px;
		height: 100%;
	}
</style>
