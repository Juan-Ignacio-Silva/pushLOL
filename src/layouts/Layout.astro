---
import DotBackground from '../components/DotBackground.astro';
import AvatarCircles from '../components/AvatarCircles.astro';

interface Props {
	title: String;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body>
		<AvatarCircles />
		<DotBackground>
			<slot />
		</DotBackground>
	</body>
</html>

<style>
	* {
		margin: 0px;
		padding: 0px;
		box-sizing: border-box;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
	}

	html {
		scroll-behavior: smooth;
	}
</style>
