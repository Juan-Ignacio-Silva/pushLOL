                </div>
                <div class="offers-grid">
                    <div class="offer-card"></div>
                    <div class="offer-card"></div>
                    <div class="offer-card"></div>
                </div>
            </div>
        </div>
		<slot />
	</body>
</html>

<style is:global>
    <style>
        :root {
            --pink-border: #ff1493;
            --neon-green: #98FB98;
            --yellow: #ffd700;
            --dark-bg: #0a0a0a;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: var(--dark-bg);
            color: white;
            height: 100vh;
            display: flex;
            background-color: #0a0a0a;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: var(--dark-bg);
            border-right: 1px solid var(--pink-border);
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        .logo {
            background-color: var(--neon-green);
            padding: 10px;
            margin-bottom: 30px;
            border-radius: 4px;
            color: black;
            font-weight: bold;
        }

        .nav-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            color: var(--yellow);
        }

        .nav-dot {
            width: 8px;
            height: 8px;
            background-color: var(--yellow);
            border-radius: 50%;
            margin-right: 15px;
        }

        .nav-icon {
            width: 20px;
            height: 20px;
            margin-right: 15px;
            opacity: 0.6;
        }

        .friends-chat {
            margin-top: auto;
            border-top: 1px solid #333;
            padding-top: 20px;
        }

        .friends-chat button {
            width: 100%;
            padding: 10px;
            background: transparent;
            border: 1px solid #333;
            color: #666;
            border-radius: 4px;
            cursor: pointer;
            display: flex;
            justify-content: space-between;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .search-bar {
            padding: 20px;
            border-bottom: 1px solid var(--pink-border);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .search-container {
            max-width: 600px;
            width: 100%;
            margin: 0 auto;
            position: relative;
        }

        .search-container input {
            width: 100%;
            padding: 10px 40px;
            background: transparent;
            border: 1px solid var(--pink-border);
            border-radius: 4px;
            color: white;
        }

        .patches {
            background-color: var(--neon-green);
            padding: 10px;
            border-radius: 4px;
            color: black;
            font-weight: bold;
            margin-left: 20px;
        }

        /* Featured Game */
        .featured-game {
            margin: 20px;
            border: 2px solid var(--yellow);
            border-radius: 8px;
            overflow: hidden;
            position: relative;
        }

        .featured-game img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .game-info {
            position: absolute;
            bottom: 20px;
            left: 20px;
        }

        .game-title {
            font-size: 2em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .friends-playing {
            display: flex;
            align-items: center;
        }

        .friend-avatars {
            display: flex;
        }

        .friend-avatar {
            width: 30px;
            height: 30px;
            background: #ccc;
            border: 2px solid white;
            border-radius: 50%;
            margin-left: -10px;
        }

        /* Special Offers */
        .special-offers {
            padding: 20px;
        }

        .offers-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .learn-more {
            color: orange;
            text-decoration: none;
        }

        .offers-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        .offer-card {
            background-color: var(--yellow);
            aspect-ratio: 4/3;
            border-radius: 8px;
        }
</style>
