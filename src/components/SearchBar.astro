<div class="input-border">
    <input id="buscador" type="text" placeholder="Buscar campeon">
</div>

<style>
    .input-border {
        width: 300px;
        height: 50px;
        padding: 6px;
        background: #343434;
        border-radius: 8px;
        display: flex;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(25px);
    }

    #buscador {
        border-radius: 4px;
        width: 100%;
        height: 100%;
        background-color: #0A0A0A;
        border: none;
        color: white;
        padding: 5px;
        font-family: 'Akira Expanded', sans-serif;
    }

    #buscador::placeholder {
        color: #BEBFBF;
        font-family: 'Akira Expanded', sans-serif;
        font-weight: 300;
    }

    #buscador:focus {
        outline: none;
    }
</style>