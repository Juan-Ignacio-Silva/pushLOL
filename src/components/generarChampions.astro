---
import personajesData from '../data/champions.json'
---

<div class="contenedor">
    <div class="contenido-pjs">
        {
            personajesData.map(champion => (
                <div 
                    class="card-chmpion"
                    data-positions={JSON.stringify(champion.positions)}
                >
                    <img 
                        id={champion.name.toLowerCase()} 
                        src={champion.image_url} 
                        alt={champion.name}
                    />
                </div>
            ))
        }
    </div>
</div>

<style>
    .contenedor {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .contenido-pjs {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(6, 96px);
        gap: 10px;
        max-height: 545px;
        overflow-y: auto;
        padding: 10px;
    }

    .contenido-pjs::-webkit-scrollbar {
        display: none;
        width: 0px;
    }

    .card-chmpion {
        background-color: #2D2F2A;
        width: 95px;
        height: 95px;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10px;
        transition: all 0.3s ease;
        border: 1px solid #2D2F2A;
        cursor: pointer;
    }

    .card-chmpion img {
        width: 90px;
        border-radius: 10px;
    }

    .card-chmpion:hover {
        background-color: #B8D22A;
        transform: translateY(-2px);
        border-color: #B8D22A;
    }

    @media only screen and (min-width: 1920px) {
        .contenido-pjs {
            grid-template-columns: repeat(8, 106px);
        }

        .card-chmpion {
            width: 110px;
            height: 110px;
        }

        .card-chmpion img {
            width: 105px;
        }
    }
</style>