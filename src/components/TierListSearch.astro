<style>
    .search-container {
        width: 100%;
        max-width: 435px;
        margin: 0 auto 2rem auto;
        position: relative;
    }

    #champion-search {
        width: 100%;
        height: 35px;
        background: #1A1D21;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 6px;
        padding: 0 12px;
        color: white;
        font-size: 13px;
    }

    .search-results {
        position: absolute;
        top: calc(100% + 4px);
        left: 0;
        right: 0;
        background: #1A1D21;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 8px;
        display: none;
        z-index: 1000;
    }

    .search-results.active {
        display: block;
    }

    .champion-row {
        display: flex;
        align-items: flex-start;
        padding: 8px;
        gap: 12px;
    }

    .champion-row:hover {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
    }

    .champion-icon {
        width: 32px;
        height: 32px;
        flex-shrink: 0;
    }

    .champion-icon img {
        width: 100%;
        height: 100%;
        border-radius: 4px;
        object-fit: cover;
    }

    .champion-info {
        display: flex;
        flex-direction: column;
        gap: 2px;
        padding-top: 2px;
    }

    .champion-name {
        color: #9aa4af;
        font-size: 14px;
        font-weight: 500;
        line-height: 1;
    }

    .champion-subtitle {
        color: #666;
        font-size: 12px;
        line-height: 1;
    }
</style>

<script>
    const searchInput = document.getElementById('champion-search');
    const searchResults = document.getElementById('search-results');
    
    // Datos de prueba
    const champions = [
        {
            name: "GALIO",
            image: "https://cdn.communitydragon.org/15.2.1/champion/Galio/square"
        },
        {
            name: "GANGPLANK",
            image: "https://cdn.communitydragon.org/15.2.1/champion/Gangplank/square"
        },
        {
            name: "GAREN",
            image: "https://cdn.communitydragon.org/15.2.1/champion/Garen/square"
        }
    ];

    searchInput.addEventListener('input', (e) => {
        const searchTerm = e.target.value.toLowerCase();
        
        if (searchTerm.length < 1) {
            searchResults.classList.remove('active');
            return;
        }

        const filteredChampions = champions.filter(champion => 
            champion.name.toLowerCase().includes(searchTerm)
        );

        if (filteredChampions.length > 0) {
            searchResults.innerHTML = filteredChampions.map(champion => `
                <div class="champion-row">
                    <div class="champion-icon">
                        <img src="${champion.image}" alt="${champion.name}">
                    </div>
                    <div class="champion-info">
                        <span class="champion-name">${champion.name}</span>
                        <span class="champion-subtitle">Counters y Build</span>
                    </div>
                </div>
            `).join('');
            searchResults.classList.add('active');
        } else {
            searchResults.classList.remove('active');
        }
    });

    // Cerrar al hacer clic fuera
    document.addEventListener('click', (e) => {
        if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.classList.remove('active');
        }
    });
</script> 