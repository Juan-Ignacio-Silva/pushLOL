---
const { className } = Astro.props;
---

<div class="dot-background">
    <div class="dot-overlay"></div>
</div>
<div class="content">
    <slot />
</div>

<style>
    .dot-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        background-color: #0e1014;
        background-image: radial-gradient(circle at 1px 1px, #1A1D21 2px, transparent 0);
        background-size: 20px 20px;
    }

    .dot-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        background: radial-gradient(
            600px circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
            rgba(245, 66, 69, 0.089),
            transparent 40%
        );
    }

    .content {
        min-height: 100vh;
        width: 100%;
    }
</style>

<script>
    const overlay = document.querySelector('.dot-overlay');

    document.addEventListener('mousemove', (e) => {
        const x = e.clientX;
        const y = e.clientY;
        
        if (overlay) {
            overlay.style.setProperty('--mouse-x', `${x}px`);
            overlay.style.setProperty('--mouse-y', `${y}px`);
        }
    });
</script> 